@{
    ViewBag.Title = "Register Form";
}

@model findRes.Models.cusFavRes

<h2 class="text-center">@ViewBag.Title</h2>

<form class="text-center border border-dark" style="border-collapse: separate; border-spacing: 15px;" action="dataInput" method="post">
    <fieldset>
        <br />
        <br />
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="cusName"></label>
            <input asp-for="cusName" />
        </div>

        <div class="mb-3 form-group">
            <label class="form-label" asp-for="cusResName"></label>
            <input asp-for="cusResName" />
        </div>

        <div class="mb-3 form-group">
            <label class="form-label" asp-for="cusFavDish"></label>
            <input asp-for="cusFavDish" />
        </div>

        <div class="mb-3 form-group">
            <label class="form-label" asp-for="cusPhone"></label>
            <input asp-for="cusPhone" />
        </div>

        <button class="btn btn-warning" type="submit">Submit</button>
    </fieldset>
    <br />
    <br />
</form>

<div asp-validation-summary="All"></div>